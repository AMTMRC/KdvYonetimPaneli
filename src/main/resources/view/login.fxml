<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.LoginController" prefWidth="300" prefHeight="200">
    <children>
        <Label layoutX="30" layoutY="20" text="Kullanıcı Adı"/>
        <TextField fx:id="usernameField" layoutX="30" layoutY="40" prefWidth="240"/>

        <Label layoutX="30" layoutY="80" text="Şifre"/>
        <PasswordField fx:id="passwordField" layoutX="30" layoutY="100" prefWidth="240"/>

        <Button layoutX="30" layoutY="140" prefWidth="240" text="Giriş Yap" onAction="#login"/>
        <Button layoutX="30" layoutY="170" prefWidth="240" text="Kayıt Ol" onAction="#goToRegister"/>

        <Label fx:id="errorLabel" layoutX="30" layoutY="170" textFill="red"/>
    </children>
</AnchorPane>
